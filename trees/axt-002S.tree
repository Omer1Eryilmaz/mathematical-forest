\import{basic-macros}
\import{axt-000M}

\def\isCompactOpen[U]{\mathsf{isCompact}(\U)}

\p{
  Let #{X} be a #{(\UU, \VV, \WW)}-locale. An open #{U : \opens{X}} is called
  \definiendum{compact} if the principal filter on #{U} is inaccessible by joins
  of directed [#{\WW}-families](axt-001F).
}
